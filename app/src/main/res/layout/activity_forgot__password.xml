<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forgot_Password">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:26"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/prompt_forgot"
        android:layout_below="@id/via_forgot"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Verification code has been sent to you on 0541930957, please enter it below: "
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="65dp"
        android:layout_marginStart="15dp"
        android:id="@+id/via_forgot"/>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/otp_forgot"
        android:layout_marginTop="90dp"
        android:layout_below="@id/prompt_forgot"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_centerHorizontal="true">


        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="15dp"
            android:id="@+id/edt1"
            android:inputType="numberPassword"
            android:hint="*"
            android:maxLength="1"
            android:nextFocusDown="@id/edt2"
            android:textAlignment="center"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="15dp"
            android:id="@+id/edt2"
            android:inputType="numberPassword"
            android:hint="*"
            android:maxLength="1"
            android:nextFocusDown="@id/edt3"
            android:textAlignment="center"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="15dp"
            android:id="@+id/edt3"
            android:inputType="numberPassword"
            android:hint="*"
            android:maxLength="1"
            android:nextFocusDown="@id/edt4"
            android:textAlignment="center"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="15dp"
            android:id="@+id/edt4"
            android:inputType="numberPassword"
            android:hint="*"
            android:maxLength="1"
            android:nextFocusDown="@id/edt5"
            android:textAlignment="center"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="15dp"
            android:id="@+id/edt5"
            android:inputType="numberPassword"
            android:hint="*"
            android:maxLength="1"
            android:nextFocusDown="@id/edt6"
            android:textAlignment="center"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/edt6"
            android:inputType="numberPassword"
            android:hint="*"
            android:textAlignment="center"/>
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_below="@id/otp_forgot"
        android:layout_marginTop="65dp"
        android:id="@+id/btn_get_code"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/loginbtn_bg"/>



</RelativeLayout>